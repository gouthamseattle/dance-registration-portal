# Dance Registration Portal Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox
# Change to 'live' for production

# Email Configuration
# Option A: Use a well-known service (e.g., gmail). Requires EMAIL_USER and EMAIL_PASSWORD (app password for Gmail).
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Option B: Custom SMTP host/port (uncomment and fill if not using EMAIL_SERVICE)
# EMAIL_HOST=smtp.yourprovider.com
# EMAIL_PORT=587
# EMAIL_PASS=your_smtp_password

# Optional "From" overrides
EMAIL_FROM_NAME=Dance Class Registration
EMAIL_FROM_ADDRESS=your_email@gmail.com
# EMAIL_FROM="Dance Class Registration <your_email@gmail.com>"

# Optional headers
# REPLY_TO=info@yourdomain.com
# ADMIN_BCC=admin@yourdomain.com

# Enable email debug logging (no secrets), set to 'true' to see logs
# EMAIL_DEBUG=true

# Application Settings
APP_NAME=Dance Class Registration Portal
APP_URL=http://localhost:3000
CURRENCY=USD

# Session Secret (generate a random string)
SESSION_SECRET=your_random_session_secret_here

# Database
DATABASE_PATH=./database/registrations.db

# ngrok Configuration (optional)
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here
